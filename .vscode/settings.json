{
	"editor.rulers": [120],

	"editor.defaultFormatter": "dprint.dprint",
	"eslint.validate": ["svelte"],
	"eslint.workingDirectories": [
		{
			"directory": "app",
			"changeProcessCWD": true
		}
	],

	"unocss.root": [
		"./app"
	],

	"files.exclude": {
		"**/node_modules": true,
		"**/target": true,
		"**/dist": true,
		".vs": true,
		".idea": true
	},
	"cSpell.words": [
		"cringily",
		"Deezer",
		"Flac",
		"reqwest",
		"rxrcd",
		"tauri",
		"unocss"
	]
}
