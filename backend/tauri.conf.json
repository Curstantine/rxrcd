{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "pnpm run build",
		"beforeDevCommand": "pnpm run dev",
		"devPath": "http://localhost:5173",
		"distDir": "../app/dist"
	},
	"package": {
		"productName": "rxrcd",
		"version": "0.1.0"
	},
	"tauri": {
		"allowlist": {
			"window": {
				"close": true,
				"create": true,
				"hide": true,
				"show": true,

				"setClosable": true,
				"setCursorGrab": true,
				"setCursorIcon": true,

				"maximize": true,
				"minimize": true,
				"unmaximize": true,
				"unminimize": true,

				"startDragging": true
			},
			"fs": {
				"readDir": true,
				"readFile": true,
				"removeFile": true,
				"writeFile": true
			},
			"protocol": {
				"asset": true,
				"assetScope": ["$APPDATA/**"]
			}
		},
		"bundle": {
			"active": true,
			"category": "Utility",
			"copyright": "",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			],
			"identifier": "moe.curstantine.rxrcd",
			"longDescription": "",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"resources": [],
			"shortDescription": "",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"width": 800,
				"height": 600,
				"minWidth": 500,
				"minHeight": 500,
				"resizable": true,
				"decorations": true,

				"visible": false,
				"focus": false,

				"title": "rxrcd"
			}
		]
	}
}
